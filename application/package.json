{
  "name": "stormstore",
  "version": "1.2.6",
  "description": "Tienda de aplicaciones de StormGamesStudios",
  "author": "StormGamesStudios",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "update-check": "electron-updater"
  },
  "build": {
    "appId": "com.stormgamesstudios.stormstore",
    "productName": "StormStore",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "acierto-incomodo",
      "repo": "StormStore"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "include": "build/installer.nsh"
    },
    "extraResources": [
      "assets/extraFiles/**"
    ]
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "@equal-games/game-scanner": "^1.0.3",
    "@material/web": "^2.4.1",
    "electron-updater": "^6.7.3",
    "extract-zip": "^2.0.1",
    "steam-path": "^1.0.2"
  }
}
