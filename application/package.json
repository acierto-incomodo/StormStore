{
  "name": "stormstore",
  "version": "1.1.1",
  "description": "Tienda de aplicaciones de StormGamesStudios",
  "author": "StormGamesStudios",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "update-check": "electron-updater"
  },
  "build": {
    "appId": "com.stormgamesstudios.stormstore",
    "productName": "StormStore",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "acierto-incomodo",
      "repo": "StormStore"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "include": "build/installer.nsh"
    }
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  }
}
