{
  "name": "stormstore",
  "version": "1.2.12",
  "description": "Tienda de aplicaciones de StormGamesStudios",
  "author": "StormGamesStudios",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:stormvortex": "electron . --StormVortex",
    "build": "electron-builder",
    "update-check": "electron-updater"
  },
  "build": {
    "appId": "com.stormgamesstudios.stormstore",
    "productName": "StormStore",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "acierto-incomodo",
      "repo": "StormStore"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "include": "build/v3-installer.nsh"
    },
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "apps.json",
      "UPDATE.md",
      "Changes.txt",
      "renderer/**/*",
      "assets/**/*",
      "!assets/extraFiles/**/*"
    ],
    "extraResources": [
      "assets/extraFiles/**"
    ]
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  },
  "dependencies": {
    "@equal-games/game-scanner": "^1.1.4",
    "@material/web": "^2.4.1",
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.8.3",
    "extract-zip": "^2.0.1",
    "steam-path": "^1.0.2"
  }
}
